<Window x:Class="GestionHotel.Windows.Clients.WindowDetailsClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionHotel.Windows.Clients"
        mc:Ignorable="d"
        Title="WindowDetailsClient" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize">
    <Grid Background="#FF745512">
        <Grid Background="white" Margin="10">
            <StackPanel  VerticalAlignment="Top" Margin="10">
                <TextBlock
                     HorizontalAlignment="Center"
                     Text="Details client"
                     FontSize="20"
                     Foreground="Black"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <StackPanel Orientation="Vertical" Margin="10 60 0 0" HorizontalAlignment="Left">
                    
                    <TextBlock Width="120"
                           FontSize="15"
                            Margin=" 10"
                            FontWeight="Bold"   >
                Date éxpiration :
                    </TextBlock>
                    <TextBlock Width="120"
                           FontSize="15"
                            Margin=" 10"
                            FontWeight="Bold"   >
                Tarif chambre :
                    </TextBlock>
                    <TextBlock Width="120"
                           FontSize="15"
                            Margin=" 10"
                            FontWeight="Bold"   >
                Categorie client :
                    </TextBlock>
                </StackPanel>
                <StackPanel >
                    <StackPanel Orientation="Vertical" Margin="10 60 0 0" HorizontalAlignment="Left">
                        <TextBlock Width="120"
                           FontSize="15"
                            Margin=" 10"
                            Name="txt_details_date_affectation"   >
                12/12/2021
                        </TextBlock>
                        <TextBlock Width="120"
                           FontSize="15"
                            Margin=" 10"
                            Name="txt_details_tarif_chambre">
                25$
                        </TextBlock>
                        <TextBlock Width="120"
                           FontSize="15"
                            Margin=" 10"
                            Name="txt_details_cat_client"   >
                Gold
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                        Background="Beige"
                        Margin="10 0 0 0"
                        Width="400"
                        Height="200">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel>
                            <Border Width="100" Height="100"
                            HorizontalAlignment="Left"
                            CornerRadius="80"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            Margin="10">
                                <Border.Background>
                                    <ImageBrush ImageSource="/Images/profile.png"/>
                                </Border.Background>
                            </Border>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Width="280" Margin="0 0 10 0">
                            <StackPanel Orientation="Horizontal" Margin="10">
                                <TextBlock Text="Nom:" FontWeight="Bold"/>
                                <TextBlock Text="Ushindi" Margin="30 0 20 0" FontStyle="Italic"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="10 0 0 0">
                                <TextBlock Text="Postnom:" FontWeight="Bold"/>
                                <TextBlock Text="Kaghoma" Margin="30 0 20 10" FontStyle="Italic"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="10 0 0 0">
                                <TextBlock Text="Prenom:" FontWeight="Bold"/>
                                <TextBlock Text="Muhindo" Margin="30 0 20 0" FontStyle="Italic"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="10 10 0 0">
                                <TextBlock Text="Telephone:" FontWeight="Bold"/>
                                <TextBlock Text="+243997245164" Margin="30 0 20 0" FontStyle="Italic"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="10 10 0 0">
                                <TextBlock Text="Email:" FontWeight="Bold"/>
                                <TextBlock Text="ushindikaghommachris@gmail.com" Margin="30 0 20 0" FontStyle="Italic"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="10 10 0 0">
                                <TextBlock Text="Categorie membre:" FontWeight="Bold"/>
                                <TextBlock Text="Gold" Margin="30 0 20 0" FontStyle="Italic"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="15 0 15 20">

                <Button Name="btnquitterDetails" Style="{StaticResource MaterialDesignFlatButton}" Click="btnquitterDetails_Click">
                    Quitter
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
